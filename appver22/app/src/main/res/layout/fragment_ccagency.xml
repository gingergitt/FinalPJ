<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.appver2.CCFragment.CCNameFragment">


    <androidx.cardview.widget.CardView

        style="@style/CardStyle"
        card_view:cardBackgroundColor="#292D38"
        card_view:cardCornerRadius="1dp"
        card_view:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CardLabel"
                android:text="@string/card_agnecy" />

            <com.example.appver2.Utils.CreditCardEditText
                android:id="@+id/et_agency"
                style="@style/CardInput"
                android:fontFamily="sans-serif-light"
                android:hint="Input Card Agency Here"
                android:inputType="text|textNoSuggestions"
                android:maxLength="22"
                android:privateImeOptions="nm"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
