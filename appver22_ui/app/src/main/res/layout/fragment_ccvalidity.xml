<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.appver2.CCFragment.CCValidityFragment">

    <androidx.cardview.widget.CardView
        style="@style/CardStyle"
        app:cardBackgroundColor="#292D38"
        card_view:cardCornerRadius="1dp"
        card_view:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CardLabel"
                android:text="@string/card_validity" />

            <com.example.appver2.Utils.CreditCardEditText
                android:id="@+id/et_validity"
                style="@style/CardInput"
                android:fontFamily="sans-serif-light"
                android:hint="Expiry Date"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
